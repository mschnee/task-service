{
  "name": "task-service",
  "version": "1.0.0",
  "description": "Task Service Example",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build:apidocs": "lb-apidocs",
    "build": "lb-tsc es2017 --outDir dist",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist*",
    "lint": "npm run prettier:check && npm run tslint",
    "lint:fix": "npm run tslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "tslint": "lb-tslint",
    "tslint:fix": "npm run tslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t task-service .",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "env-cmd ./.env.local node .",
    "prepublishOnly": "npm run test",
    "docker:run": "env-cmd ./.env docker-compose up",
    "docker:config": "env-cmd ./.env docker-compose config",
    "it:before": "docker-compose -f docker-compose.base.yml -f docker-compose.test.yml up -d --build ",
    "it:after": "docker-compose -f docker-compose.base.yml -f docker-compose.test.yml stop && docker-compose -f docker-compose.base.yml -f docker-compose.test.yml rm -fv",
    "it:all": "nyc ava -s \"./src/__tests__/**/*.acceptance.ts\"",
    "it":"run-s -c it:before it:all it:after"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^1.0.17",
    "@loopback/boot": "^1.1.0",
    "@loopback/context": "^1.7.0",
    "@loopback/core": "^1.1.8",
    "@loopback/openapi-v3": "^1.3.0",
    "@loopback/repository": "^1.1.8",
    "@loopback/rest": "^1.8.0",
    "@loopback/rest-explorer": "^1.1.11",
    "@loopback/service-proxy": "^1.0.10",
    "bcrypt": "^3.0.5",
    "env-cmd": "^8.0.2",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-kv-redis": "^3.0.1",
    "loopback-connector-mongodb": "^4.0.0",
    "mongo": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@loopback/build": "^1.3.2",
    "@loopback/testlab": "^1.1.0",
    "@loopback/tslint-config": "^2.0.2",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.22",
    "@types/node": "^10.11.2",
    "@types/passport": "^1.0.0",
    "@types/passport-http": "^0.3.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "ava": "^1.4.1",
    "cross-env": "^5.2.0",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.12.0",
    "typescript": "^3.3.1"
  },
  "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
